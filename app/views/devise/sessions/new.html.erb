<div class="c-login">
  <div class="c-login__title">
    Log in
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "c-login__form" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { class: 'c-login__input' } %>
      <%= f.input :password, required: false, input_html: { class: 'c-login__input' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <%= f.button :submit, "Log in", class: 'c-login__button' %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
