<div class="c-login">
  <div class="c-login__title">
    Forgot your password?
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "c-login__form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'c-login__input' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: 'c-login__button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
