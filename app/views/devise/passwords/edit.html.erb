<div class="c-devise">
  <div class="c-devise__title">
    Change your password
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "c-devise__form" }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, label: "New password", required: true, autofocus: true, input_html: { class: 'c-devise__input' } %>
      <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { class: 'c-devise__input' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: 'c-devise__button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
