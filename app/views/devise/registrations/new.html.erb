<div class="c-devise">
  <div class="c-devise__title">
    Sign up
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "c-devise__form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'c-devise__input' } %>
      <%= f.input :password, required: true, input_html: { class: 'c-devise__input' } %>
      <%= f.input :password_confirmation, required: true, input_html: { class: 'c-devise__input' } %>
    </div>

    <%= f.button :submit, "Sign up", class: 'c-devise__button' %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
